<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#B3E5FC" /> <!-- Adjust color for selected state -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#2196F3" /> <!-- Adjust border color for selected state -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Adjust color for default state -->
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#B0BEC5" /> <!-- Adjust border color for default state -->
        </shape>
    </item>
</selector>